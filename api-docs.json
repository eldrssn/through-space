{
    "openapi": "3.0.0",
    "info": {
        "title": "app",
        "description": "app",
        "contact": {
            "name": "TRIBE",
            "url": "https://studiotribe.ru",
            "email": "s@studiotribe.ru"
        },
        "version": "0.1"
    },
    "servers": [
        {
            "url": "https://api.techinsider-imedia.production-dev.ru"
        }
    ],
    "paths": {
        "api/images/{id}": {
            "get": {
                "tags": [
                    "Image"
                ],
                "description": "Получить объект картинки по id",
                "operationId": "getImageById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешно",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "title": "imageByIdResponse",
                                    "description": "Ответ с объектом картинки",
                                    "required": [
                                        "data"
                                    ],
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/ImageResource"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Не найдено",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "required": [
                                        "message"
                                    ],
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "api/images/search/{search}": {
            "get": {
                "tags": [
                    "Image"
                ],
                "description": "Поиск картинки",
                "operationId": "searchImage",
                "parameters": [
                    {
                        "name": "search",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешно",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "title": "imageBySearchQueryResponse",
                                    "description": "Ответ с объектом картинки",
                                    "required": [
                                        "data"
                                    ],
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/ImageResource"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Не найдено",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "required": [
                                        "message"
                                    ],
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "api/images": {
            "get": {
                "tags": [
                    "Image"
                ],
                "description": "Получить объект планет в заданной области координат",
                "operationId": "getImagesByCoordinates",
                "parameters": [
                    {
                        "name": "x_min",
                        "in": "query",
                        "description": "Минимальная координата X",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "x_max",
                        "in": "query",
                        "description": "Максимальная координата X (≥ x_min)",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "y_min",
                        "in": "query",
                        "description": "Минимальная координата Y",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "y_max",
                        "in": "query",
                        "description": "Максимальная координата Y (≥ y_min)",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешно",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "title": "ImagesByCoordinatesResponse",
                                    "description": "Массив объектов картинок",
                                    "required": [
                                        "data"
                                    ],
                                    "properties": {
                                        "data": {
                                            "description": "Массив объектов картинок",
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/ImageResource"
                                            },
                                            "minItems": 0
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Ошибочные данные",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "title": "Unprocessable",
                                    "required": [
                                        "message",
                                        "errors"
                                    ],
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The name field is required. (and 1 more error)"
                                        },
                                        "errors": {
                                            "type": "object",
                                            "additionalProperties": {
                                                "minProperties": 1,
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ImageResource": {
                "description": "Объект картинки",
                "required": [
                    "id",
                    "image_path",
                    "planet_name",
                    "author",
                    "compressed_image_path",
                    "x",
                    "y",
                    "z",
                    "status"
                ],
                "properties": {
                    "id": {
                        "$ref": "#/components/schemas/Uuid"
                    },
                    "planet_name": {
                        "type": "string"
                    },
                    "author": {
                        "type": "string"
                    },
                    "image_path": {
                        "type": "string"
                    },
                    "compressed_image_path": {
                        "type": "string"
                    },
                    "x": {
                        "type": "integer"
                    },
                    "y": {
                        "type": "integer"
                    },
                    "z": {
                        "type": "integer"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "Pending",
                            "Approved",
                            "Rejected"
                        ]
                    }
                },
                "type": "object"
            },
            "Uuid": {
                "type": "string",
                "format": "uuid"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Image",
            "description": "Image"
        }
    ]
}